<Window x:Class="LAB_12.PolygonSettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Polygon Settings" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <StackPanel Margin="15">
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Number of Vertices:" VerticalAlignment="Center"/>
            <TextBlock Name="VerticesValue" Text="{Binding ElementName=VerticesSlider, Path=Value, StringFormat={}{0:0}}" VerticalAlignment="Center" Margin="5,0"/>
            <Slider Name="VerticesSlider" Minimum="3" Maximum="20" Value="5" Width="150" TickFrequency="1" IsSnapToTickEnabled="True"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="75" Margin="0,0,10,0" Click="OkButton_Click"/>
            <Button Content="Cancel" Width="75" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>
