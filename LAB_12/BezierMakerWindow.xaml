<Window x:Class="LAB_12.BezierMakerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LAB_12"
        mc:Ignorable="d"
        Title="BezierMakerWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Canvas x:Name="BezierCanvas" Background="LightGray" MouseLeftButtonDown="BezierCanvas_MouseLeftButtonDown"/>

        <Button Grid.Row="1" Content="Готово" Click="Done_Click" Margin="5"/>
    </Grid>
</Window>
